{
  "name": "hl-code",
  "displayName": "Highlight Code",
  "description": "Highlights selected code lines with a custom background color, bookmark name, and comments",
  "version": "0.0.1",
  "publisher": "ivankrivenko",
  "engines": {
    "vscode": "^1.75.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "highlightCode.highlight",
        "title": "Highlight Selected Code"
      },
      {
        "command": "highlightCode.clearHighlights",
        "title": "Clear Highlights"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "when": "editorHasSelection",
          "command": "highlightCode.highlight",
          "group": "modification"
        },
        {
          "when": "editorTextFocus",
          "command": "highlightCode.clearHighlights",
          "group": "modification"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./"
  },
  "devDependencies": {
    "@types/vscode": "^1.75.0",
    "@types/node": "^16",
    "typescript": "^4.9.0"
  }
}